@{
}
@model List<Task>

<div class="container">
    <div class="row">
        <div class="col">
            <h1>Stephen Covey's Time Management Matrix</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-2"></div>
        <div class="col">Urgent</div>
        <div class="col">Not Urgent</div>
    </div>
    <div class="row">
        <div class="col-2 d-flex align-items-center justify-content-center text-rotate">Important</div>
        <div class="col">
            <h2>Quadrant 1</h2>
            <br />
            @foreach(Task t in Model)
            {
            if (t.Quadrant == 1)
            {
                    <p>Task: @t.Name, Due Date: @t.DueDate, Category: @t.Category
                        <a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@t.TaskId">Edit</a>
                        <a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@t.TaskId">Delete</a>
                    </p>

            }
            }
         </div>
        <div class="col">
            <h2>Quadrant 2</h2>
            <br />
            @foreach (Task t in Model)
            {
                if (t.Quadrant == 2)
                {
                    <p>Task: @t.Name, Due Date: @t.DueDate, Category: @t.Category</p>
                }
            }
        </div>
    </div>
    <div class="row">
        <div class="col-2 d-flex align-items-center justify-content-center text-rotate">Not Important</div>
        <div class="col">
            <h2>Quadrant 3</h2>
            <br />
            @foreach (Task t in Model)
            {
                if (t.Quadrant == 3)
                {
                    <p>Task: @t.Name, Due Date: @t.DueDate, Category: @t.Category</p>
                }
            }
        </div>
        <div class="col">
            <h2>Quadrant 4</h2>
            <br />
            @foreach (Task t in Model)
            {
                if (t.Quadrant == 4)
                {
                    <p>Task: @t.Name, Due Date: @t.DueDate, Category: @t.Category</p>
                }
            }
        </div>
    </div>
</div>